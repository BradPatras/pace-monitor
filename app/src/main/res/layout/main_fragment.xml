<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

    <androidx.constraintlayout.widget.Guideline android:id="@+id/bottom_fifth_guide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent=".8"
        android:orientation="horizontal"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/first_fifth_guide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".2"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/last_fifth_guide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".8"
        />

        <io.github.bradpatras.pacemonitor.customviews.PaceView
            android:id="@+id/short_avg_pace_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:labelText="10 second average"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/med_avg_pace_view"
            app:layout_constraintTop_toTopOf="parent"
            />

        <io.github.bradpatras.pacemonitor.customviews.PaceView
            android:id="@+id/med_avg_pace_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:labelText="30 second average"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/short_avg_pace_view"
            app:layout_constraintBottom_toTopOf="@id/long_avg_pace_view"
            />

        <io.github.bradpatras.pacemonitor.customviews.PaceView
            android:id="@+id/long_avg_pace_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:labelText="60 second average"
            app:layout_constraintTop_toBottomOf="@id/med_avg_pace_view"
            app:layout_constraintBottom_toBottomOf="@id/bottom_fifth_guide"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    <View android:id="@+id/button_background_view"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/startstop_btn"
        app:layout_constraintBottom_toBottomOf="@id/startstop_btn"
        app:layout_constraintLeft_toLeftOf="@id/startstop_btn"
        app:layout_constraintRight_toRightOf="@id/startstop_btn"
        android:background="@color/colorPrimaryLight"
        />
    <Button android:id="@+id/startstop_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_fifth_guide"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="?attr/selectableItemBackground"
        android:textColor="@android:color/white"
        android:textSize="42sp"
        android:text="@string/start"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
